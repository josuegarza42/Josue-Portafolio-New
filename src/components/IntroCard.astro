---
import Card from "./Card/index.astro";
import Button from "./Button.astro";
import { LINKS } from "../lib/constants";
import { Icon } from "astro-icon/components";
import Tooltip from "./Tooltip/index";
import { Image } from "astro:assets";
---

<Card colSpan="md:col-span-3" rowSpan="md:row-span-4">
  <div class="flex w-full h-full">
    <div class="flex flex-col justify-between md:max-h-[300px] gap-4">
      <div class="flex flex-col h-full">
        <h6 class="text-sm font-light m-0 text-gray-500">welcome</h6>
        <p class="m-0 font-light text-xl">
          Hello, I'm <b class="font-bold">Josue Garza</b>, a <b
            class="font-bold">Customer Experience (CX) professional</b
          > specializing in <b class="font-bold">AI-driven automation</b> and <b
            class="font-bold">solution design</b
          >. I leverage my <b class="font-bold"
            >Systems Engineering background</b
          > to translate complex client requirements into <b class="font-bold"
            >efficient, automated solutions</b
          > that enhance service delivery for enterprise clients.
        </p>
      </div>
      <div class="flex gap-4">
        <a aria-label="github profile" href={LINKS.github} target="_blank">
          <Button aria-label="github profile">
            <Icon class="h-6" name="ri:github-fill" />
            <span class="sr-only">GitHub Profile</span>
          </Button>
        </a>
        <a aria-label="linkedin profile" href={LINKS.linkedin} target="_blank">
          <Button aria-label="linkedin profile">
            <Icon class="h-6" name="ri:linkedin-box-fill" />
            <span class="sr-only">Linkedin Profile</span>
          </Button>
        </a>

        <Tooltip client:visible>
          <Button aria-label="easter egg btn">
            <Icon class="h-6" name="ri:emotion-laugh-line" />
            <span class="sr-only">Easter egg button</span>
          </Button>
        </Tooltip>
      </div>
    </div>
    <Image
      alt="memoji of josue"
      class="w-auto max-h-[300px] select-none absolute right-[-110px] bottom-[-20px] z-[-1] opacity-50 md:opacity-100 md:relative md:right-auto md:bottom-auto md:z-auto pointer-events-none"
      height="300"
      src="/J.png"
      width="300"
    />
  </div>
</Card>
